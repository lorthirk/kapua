  logicalFilePath="KapuaDB/device-match-fulltext-index.xml">

    <changeSet id="device-match-fulltext-index" author="eurotech" dbms="mysql, mariadb">
        <sql>CREATE FULLTEXT INDEX idx_device_match_fulltext
             ON dvc_device (
                client_id,
                display_name,
                serial_number,
                model_id,
                model_name,
                bios_version,
                firmware_version,
                os_version,
                jvm_version,
                osgi_framework_version,
                app_framework_version,
                connection_interface,
                connection_ip
            );</sql>
    </changeSet>
</databaseChangeLog>
